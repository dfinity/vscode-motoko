{
    "name": "motoko-viper",
    "displayName": "Motoko-san",
    "description": "Experimental formal verification support for Motoko",
    "version": "0.0.3",
    "publisher": "dfinity-foundation",
    "repository": "https://github.com/dfinity/vscode-motoko/tree/viper",
    "engines": {
        "vscode": "^1.63.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "icon": "assets/logo.png",
    "galleryBanner": {
        "color": "#000000",
        "theme": "dark"
    },
    "contributes": {
        "languages": [
            {
                "id": "motoko",
                "aliases": [
                    "Motoko",
                    "motoko"
                ],
                "extensions": [
                    ".mo",
                    ".mo_"
                ],
                "configuration": "./language-configuration.json",
                "icon": {
                    "light": "assets/icons/motoko-color.png",
                    "dark": "assets/icons/motoko-color.png"
                }
            }
        ],
        "grammars": [
            {
                "language": "motoko",
                "scopeName": "source.mo",
                "path": "./syntaxes/Major.tmLanguage"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Motoko-san",
            "properties": {
                "motokoSan.maxNumberOfProblems": {
                    "scope": "resource",
                    "type": "integer",
                    "default": 100,
                    "description": "Limit the number of warnings and errors generated by the compiler."
                },
                "motokoSan.hideWarningRegex": {
                    "scope": "resource",
                    "type": "string",
                    "default": "",
                    "description": "Hide compiler warnings based on a regular expression."
                },
                "motokoSan.trace.server": {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "off",
                    "description": "Trace the communication between VS Code and the language server."
                },
                "motokoSan.debugHover": {
                    "type": "boolean",
                    "description": "Show debug information when hovering over any part of a Motoko program."
                }
            }
        },
        "commands": [
            {
                "command": "motokoSan.restartServer",
                "title": "Motoko-san: Restart language server"
            }
        ],
        "jsonValidation": [
            {
                "fileMatch": "dfx.json",
                "url": "https://raw.githubusercontent.com/dfinity/sdk/master/docs/dfx-json-schema.json"
            }
        ],
        "snippets": [
            {
                "language": "motoko",
                "path": "./snippets.json"
            }
        ]
    },
    "activationEvents": [
        "onLanguage:motoko",
        "onCommand:motoko.startService"
    ],
    "main": "./out/extension",
    "browser": "./out/browser",
    "dependencies": {
        "@viperproject/locate-java-home": "1.1.10",
        "change-case": "4.1.2",
        "fast-glob": "3.2.12",
        "mnemonist": "0.39.5",
        "motoko": "3.5.4",
        "prettier": "2.8.0",
        "prettier-plugin-motoko": "0.4.0",
        "url-relative": "1.0.0",
        "vscode-languageclient": "8.0.2",
        "vscode-languageserver": "8.0.2",
        "vscode-languageserver-textdocument": "1.0.7",
        "vscode-uri": "3.0.6",
        "which": "3.0.0"
    },
    "devDependencies": {
        "@types/jest": "^29.1.1",
        "@types/node": "^14",
        "@types/prettier": "^2.7.0",
        "@types/vscode": "^1.53.0",
        "@types/which": "^2.0.1",
        "@typescript-eslint/eslint-plugin": "^5.46.1",
        "@typescript-eslint/parser": "^5.46.1",
        "esbuild": "^0.16.7",
        "eslint": "^8.29.0",
        "eslint-plugin-jest": "^27.1.6",
        "husky": "^8.0.2",
        "jest": "^29.1.2",
        "lint-staged": "^13.1.0",
        "mkdirp": "^1.0.4",
        "npm-run-all": "^4.1.5",
        "rimraf": "^3.0.2",
        "ts-jest": "^29.0.3",
        "typescript": "^4.9.3",
        "@vscode/vsce": "^2.16.0"
    },
    "extensionDependencies": [
        "viper-admin.viper"
    ],
    "scripts": {
        "vscode:prepublish": "run-s generate compile",
        "generate:moc": "cd motoko && mv -vf .git .nogit && nix-shell --command 'mv -v .nogit .git && make -C src moc.js && cp -vfL src/moc.js ../src/generated/moc.js'",
        "generate": "mkdirp src/generated && run-s generate:moc",
        "compile": "npm run compile:pre && run-p compile:main compile:browser compile:server compile:motoko && npm run compile:post",
        "compile:pre": "rimraf ./out && mkdirp ./out/server && cp node_modules/prettier-plugin-motoko/wasm/pkg/nodejs/wasm_bg.wasm out/server/wasm_bg.wasm",
        "compile:main": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node --minify",
        "compile:browser": "esbuild ./src/browser.ts --bundle --outfile=out/browser.js --external:vscode --format=cjs --platform=node --minify",
        "compile:server": "esbuild ./src/server/server.ts --bundle --outfile=out/server/server.js --external:vscode --format=cjs --platform=node --minify",
        "compile:motoko": "esbuild ./src/server/motoko.ts --bundle --outfile=out/server/motoko.js --external:vscode --format=cjs --platform=node --minify",
        "compile:post": "mkdirp out/generated/ && ln -fv src/generated/* out/generated/",
        "prepare": "husky install",
        "lint": "eslint . --ext ts",
        "lint:fix": "npm run lint -- --fix",
        "format": "prettier --write src",
        "precommit": "lint-staged",
        "test": "jest",
        "package": "vsce package && npm test",
        "publish": "vsce publish"
    },
    "lint-staged": {
        "src/**/*.{js,ts,jsx,tsx}": [
            "eslint --max-warnings=0 --fix",
            "prettier --write"
        ]
    }
}
